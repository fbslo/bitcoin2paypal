    <div class="container-fluid page-body-wrapper">
      <div class="main-panel">
        <div class="content-wrapper">
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">New Post</h4>
                    <p class="card-description">
                      Use HTML format
                    </p>
                    <form class="forms-sample" action='/api/addPost' method="POST" encType="multipart/form-data">
                      <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        <input type="text" class="form-control" id="titleblog" placeholder="Name" name='titleblog' required>
                        <input type='hidden' id='api_key' name='api_key' value='<%= api_key %>'>
                      </div>

                      <div class="form-group">
                        <label>Upload Image (Max 5MB)</label>
                        <div class="input-group col-xs-12">
                          <span class="input-group-append">
                            <input type="file" id='file' class="btn btn-danger btn-icon-text" name='file' required></input>
                          </span>
                        </div>
                      </div>

                      <div class="form-group">
                        <label for="exampleTextarea1">Post</label>
                        <textarea class="form-control" id="bodyblog" name='bodyblog' rows="15" required></textarea>
                      </div>
                      <button type="submit" class="btn btn-primary mr-2">Submit</button>
                      <button type='reset' class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>

              <script>
              if(<%= status %> == true){
                alert("Post Submited!")
              }
              if(<%= status %> == false){
                alert("ERROR! Post Not Submitted!")
