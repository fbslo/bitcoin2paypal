			<a href="/#exchange" class="site-btn">Exchange</a>
		</div>
	</header>
	<!-- Header section end -->


	<!-- Page info section -->
	<section class="page-info-section">
		<div class="container">
			<h2>Blog</h2>
			<div class="site-beradcamb">
				<a href="/">Home</a>
				<span><i class="fa fa-angle-right"></i> <a href='/blog'>Blog</a></span>
				<span><i class="fa fa-angle-right"></i> <%- title %></span>
			</div>
		</div>
	</section>
	<!-- Page info end -->


	<!-- Blog section -->
	<section class="single-blog-page spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="blog-item bi-feature">
						<figure class="blog-thumb">
							<img src="../img/blog/<%= image %>" alt="">
						</figure>
						<div class="blog-text">
							<div class="post-date"><%- date %></div>
							<h2 class="blog-title"><a href=""><%= title %></a></h2>
							<div class="post-meta">
								<a href=""><span>by</span> Admin</a>
								<a href=""><i class="fa fa-eye"></i> <%= views %> Views</a>
							</div>
							<%- body %>
							<div class="row">
								<div class="col-sm-7">
								</div>
								<div class="col-sm-5">
									<div class="social-share">
										<p>Share</p>
										<a href="https://www.facebook.com/sharer/sharer.php?u=https://btc2pp.net/blog/post?id=<%- id %>"><i class="fa fa-facebook"></i></a>
										<a href="http://www.twitter.com/share?url=https://btc2pp.net/blog/post?id=<%- id %>"><i class="fa fa-twitter"></i></a>
										<a href="https://www.linkedin.com/shareArticle?mini=true&url=https://btc2pp.net/post?id=<%- id %>"><i class="fa fa-linkedin"></i></a>
									</div>
								</div>
							</div>
							<div class="releted-posts">
								<h4>You May Also Like</h4>
								<div class="row">
									<div class="col-md-6">
										<div class="blog-item">
											<figure class="blog-thumb">
												<img src="../img/blog/<%= last_image %>" alt="">
											</figure>
											<div class="blog-text">
												<div class="post-date"><%= last_date %></div>
												<h4 class="blog-title"><a href="/blog/post?id=<%= last_id %>"><%= last_title %></a></h4>
												<div class="post-meta">
													<a href=""><span>by</span> <%= last_author %></a>
                          <a href=""><i class="fa fa-eye"></i> <%= last_views %> Views</a>
												</div>
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="blog-item">
											<figure class="blog-thumb">
												<img src="../img/blog/<%= second_image %>" alt="">
											</figure>
											<div class="blog-text">
												<div class="post-date"><%= second_date %></div>
												<h4 class="blog-title"><a href="/blog/post?id=<%= second_id %>"><%= second_title %></a></h4>
												<div class="post-meta">
													<a href=""><span>by</span> <%= second_author %></a>
                          <a href=""><i class="fa fa-eye"></i> <%= second_views %> Views</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 sideber pt-5 pt-lg-0">
					<div class="widget-area">
						<div class="widget">
							<h4 class="widget-title">Recent Stats</h4>
							<ul class="twitter-widget">
								<li>
									<h5>Bitcoin Price</h5>
									<h5 id='btc_price'>Loading...</h5>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Blog section end -->

  <script>
	$.ajax({
		url: 'https://blockchain.info/ticker',
		contentType: "application/json",
		dataType: 'json',
		success: function(result){
				var usd_average_raw = result.USD.last
        var eur_average = result.EUR.last.toLocaleString(undefined, {maximumFractionDigits:2})
        var jpy_average = result.JPY.last.toLocaleString(undefined, {maximumFractionDigits:2})
				var usd_average = usd_average_raw.toLocaleString(undefined, {maximumFractionDigits:2})
				$('#btc_price').html('$ '+usd_average + '<br>€ '+ eur_average+'<br>¥ '+jpy_average);
		}
	});
	</script>

